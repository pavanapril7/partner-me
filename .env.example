# Database
DATABASE_URL="postgresql://username@localhost:5432/database_name?schema=public"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication Configuration
# Session expiry in days (default: 7)
SESSION_EXPIRY_DAYS=7

# OTP Configuration
# OTP expiry in minutes (default: 5)
OTP_EXPIRY_MINUTES=5

# Rate Limiting Configuration
# Maximum failed login attempts before rate limiting (default: 5)
RATE_LIMIT_ATTEMPTS=5
# Rate limit window in minutes (default: 15)
RATE_LIMIT_WINDOW_MINUTES=15

# Upload Rate Limiting Configuration
# Maximum uploads per hour (default: 50)
MAX_UPLOADS_PER_HOUR=50
# Maximum uploads per minute (default: 10)
MAX_UPLOADS_PER_MINUTE=10

# SMS Configuration
# Provider: 'twilio' or 'mock' (default: mock)
SMS_PROVIDER="mock"

# Twilio Configuration (required when SMS_PROVIDER=twilio)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID="your_account_sid_here"
TWILIO_AUTH_TOKEN="your_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"

# Storage Configuration
# Storage type: 'local' or 's3' (default: local)
STORAGE_TYPE="local"
# Upload directory for local storage (default: ./public/uploads)
UPLOAD_DIR="./public/uploads"

# S3 Configuration (required when STORAGE_TYPE=s3)
# Get these from your AWS console
S3_BUCKET="your-bucket-name"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"
# Optional: for S3-compatible services
S3_ENDPOINT="https://s3.amazonaws.com"

# Image Processing Configuration
# Maximum image size in bytes (default: 5242880 = 5MB)
MAX_IMAGE_SIZE=5242880
# Image quality settings (0-100)
IMAGE_QUALITY_THUMBNAIL=80
IMAGE_QUALITY_MEDIUM=85
IMAGE_QUALITY_FULL=90
