# Database
DATABASE_URL="postgresql://username@localhost:5432/database_name?schema=public"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication Configuration
# Session expiry in days (default: 7)
SESSION_EXPIRY_DAYS=7

# OTP Configuration
# OTP expiry in minutes (default: 5)
OTP_EXPIRY_MINUTES=5

# Rate Limiting Configuration
# Maximum failed login attempts before rate limiting (default: 5)
RATE_LIMIT_ATTEMPTS=5
# Rate limit window in minutes (default: 15)
RATE_LIMIT_WINDOW_MINUTES=15

# SMS Configuration
# Provider: 'twilio' or 'mock' (default: mock)
SMS_PROVIDER="mock"

# Twilio Configuration (required when SMS_PROVIDER=twilio)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID="your_account_sid_here"
TWILIO_AUTH_TOKEN="your_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"
